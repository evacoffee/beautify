{
  "schemaVersion": 1,
  "id": "beautymod",
  "version": "${version}",
  "name": "BeautyMod",
  "description": "A mod that adds marriage and relationships to Minecraft",
  "authors": [
    "YourName"
  ],
  "contact": {
    "homepage": "https://your-website.com/",
    "sources": "https://github.com/yourusername/beautymod",
    "issues": "https://github.com/yourusername/beautymod/issues"
  },
  "license": "MIT",
  "icon": "assets/beautymod/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.evacoffee.beautymod.BeautyMod"
    ],
    "client": [
      "com.evacoffee.beautymod.client.BeautyModClient"
    ],
    "server": [
      "com.evacoffee.beautymod.server.BeautyModServer"
    ],
    "cardinal-components-entity": [
      "com.evacoffee.beautymod.marriage.MarriageComponentInitializer"
    ]
  },
  "mixins": [
    "beautymod.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric-api": "*",
    "minecraft": "1.20.x",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.10.0"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "cardinal-components": [
      "beautymod:marriage"
    ]
  }
}